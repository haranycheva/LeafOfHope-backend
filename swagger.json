    {
      "url": "https://leafofhope-backend.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },
    {
      "name": "User",
      "description": "User endpoints"
    },
    {
      "name": "Advert",
      "description": "Advert endpoints"
    }
  ],
  "paths": {
    "/api/auth/signup": {
